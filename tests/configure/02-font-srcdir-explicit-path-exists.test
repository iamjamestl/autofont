# Include a set of common test functions
source "$HELPERS"

# Establish expectations
expected_font_srcdir='../../fixtures/Hack/source'

# Perform the action under test
configure_with_fixtures_and_build_deps

# Read the results
source "$RESULTS"

# Validate the expectations
[[ $font_srcdir == $expected_font_srcdir ]]

