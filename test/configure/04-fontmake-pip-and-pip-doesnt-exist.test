# When fontmake isn't found and `--enable-build-dependencies` is true, pip
# should be used to install fontmake.  If pip isn't found, then fail.
#

# Include a set of common test functions
source "$HELPERS"

# Establish expectations
expected_fontmake='deps/bin/fontmake'

# Perform the action under test
export FONTMAKE='fontmake_doesnt_exist'
export PYTHONHOME='/python/has/no/modules'
configure_with_fixtures --enable-build-dependencies

# Read the results
source "$RESULTS"

# Validate the expectations
[[ $CONFIGURE_STATUS != 0 ]] && grep 'failed to find required module pip' config.log

